# Perplexity API Key (required)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional API keys for enhanced demographic analysis
# These APIs provide additional accuracy for gender, age, and nationality estimation
# The system works without these but with reduced accuracy for less common names

# Genderize.io API key (optional) - for gender estimation
GENDERIZE_API_KEY=your_genderize_api_key_here

# Agify.io API key (optional) - for age estimation
AGIFY_API_KEY=your_agify_api_key_here

# Nationalize.io API key (optional) - for nationality/ethnicity estimation
NATIONALIZE_API_KEY=your_nationalize_api_key_here

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000